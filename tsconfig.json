{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@bunrest-server/*": ["./node_modules/bunrest/src/server/*"],
      "@decorator-pattern/*": ["./src/design-patten/decorator-pattern/*"]
    },

    // so that if your project isn't using TypeScript, it still has autocomplete
    "allowJs": false,

    // "bun-types" is the important part
    "types": ["bun-types"],
    "allowSyntheticDefaultImports": true
  }
}
